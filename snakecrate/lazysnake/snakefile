rule all:
    input: FILES

rule download_data:
    output: "{FILES}"
    params: 
        URL= lambda wildcards: "https://downloads.hmpdacc.org/ihmp/ibd/genome/microbiome/wgs/raw/" + wildcards.FILES
#        URL= lambda wildcards: "https://ibdmdb.org/tunnel/static/HMP2/Viromics/1732/" + wildcards.sample + ".tar"
    shell: """
        wget -O {output} {params.URL}
    """


