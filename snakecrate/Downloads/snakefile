# SNAKEFILE!                                                                                           

# This literally only downloads the data. I think cramming it into the main snakefile is too messy.                                                                                                  

# I use these resources to run this:
#   srun -p bmm -J download -t 12:00:00 --mem=2G -c 4 --pty bash
# so that I can use -j4 when running snakemake
# and the conda envronment (dynduo)                                                                                             
                               
# ███ set variables ███

INPUT_DATA = "virome_filenames.txt"

#### generate sample list from file,
####   where the lines in the file contain full file names, e.g. "QQSSQS.tar"
FILES = [x.strip().split("\n")[0] for x in open(INPUT_DATA, 'r')]

SAMPLES = [x.strip().split(".tar")[0] for x in open(INPUT_DATA, 'r')]
#SAMPLES = [x.strip().split(".fastq.gz")[0] for x in SAMPLES]




# ██████████ RULE ALL ██████████

rule all: 
    input: 
##   rule download_data
        expand("../data/raw_data/{file}", file = FILES),

# ██████████   RULES  ██████████
rule download_data:
    output: "../data/raw_data/{file}"
    params: 
#        URL= lambda wildcards: "https://downloads.hmpdacc.org/ihmp/ibd/genome/microbiome/wgs/raw/" + wildcards.file
#        URL= lambda wildcards: "https://ibdmdb.org/tunnel/static/HMP2/Viromics/1732/" + wildcards.file
        URL= lambda wildcards: "https://ibdmdb.org/tunnel/static/HMP2/Viromics/1732/" + wildcards.file
    shell: """
        wget -O {output} {params.URL}
    """